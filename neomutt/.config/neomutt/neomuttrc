source ./colors
source ./keybindings

folder-hook "inbox emciphoto" 'source ~/.config/neomutt/accounts/info@emciphoto.com'

macro index <f2> '<sync-mailbox><enter-command>source ~/.config/neomutt/accounts/info@emciphoto.com<enter><change-folder>!<enter>'
macro index <f10> '<sync-mailbox><enter-command>source ~/.config/neomutt/neomuttrc<enter><enter>'

set header_cache = ~/.cache/mutt/
set message_cachedir = ~/.cache/mutt/
set certificate_file = ~/.cache/neomutt/certificates

set sidebar_visible = yes
set mail_check_stats
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set sidebar_folder_indent = yes
set sidebar_indent_string = "  "
set sidebar_short_path = yes
set sidebar_delim_chars = "./"

# Allow Mutt to open a new IMAP connection automatically.
unset imap_passive

# Keep the IMAP connection alive by polling intermittently (time in seconds).
set imap_keepalive = 300

# How often to check for new mail (time in seconds).
set mail_check = 120

set sort = 'reverse-date'
set date_format="%y-%m-%d %H:%M"
#set index_format="%2C %Z %?X?A& ? %D %-15.15F %s (%-4.4c)"
set index_format="%4C %Z %{%y-%m-%d %H:%M} %-15.15L (%?l?%4l&%4c?) %s"

